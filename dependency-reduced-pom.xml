<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.flatirons.test</groupId>
  <artifactId>TestingAutomation</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>${maven-dependency-plugin.version}</version>
        </plugin>
        <plugin>
          <groupId>org.sonarsource.scanner.maven</groupId>
          <artifactId>sonar-maven-plugin</artifactId>
          <version>${sonar.plugin.version}</version>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>sonar-maven-plugin</artifactId>
          <version>${sonar.maven.version}</version>
        </plugin>
        <plugin>
          <groupId>org.owasp</groupId>
          <artifactId>dependency-check-maven</artifactId>
          <version>${dependency.check.version}</version>
          <executions>
            <execution>
              <goals>
                <goal>check</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <skipProvidedScope>true</skipProvidedScope>
            <skipRuntimeScope>true</skipRuntimeScope>
            <cveValidForHours>24</cveValidForHours>
            <format>xml</format>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>${maven-surefire.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <phase>initialize</phase>
            <goals>
              <goal>properties</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>junit:junit</exclude>
                </excludes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>**/module-info.class</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>${maven-build.helper.version}</version>
        <executions>
          <execution>
            <id>add-integration-test-source-as-test-sources</id>
            <phase>generate-test-sources</phase>
            <goals>
              <goal>add-test-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>src/main/java</source>
                <source>src/test/java</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>9</source>
          <target>9</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>fsi.nexus.releases</id>
      <name>artifactory-releases</name>
      <url>https://hub.flatirons.cloud/artifactory/flatirons</url>
    </repository>
    <snapshotRepository>
      <id>fsi.nexus.snapshots</id>
      <name>artifactory-snapshots</name>
      <url>https://hub.flatirons.cloud/artifactory/flatirons</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <maven-build.helper.version>3.0.0</maven-build.helper.version>
    <jacoco.plugin.version>0.8.4</jacoco.plugin.version>
    <slf4j-api.version>1.7.25</slf4j-api.version>
    <jaxb.version>2.2.11</jaxb.version>
    <maven-surefire.version>2.21.0</maven-surefire.version>
    <maven-dependency-plugin.version>3.1.2</maven-dependency-plugin.version>
    <xmlunit.version>2.8.1</xmlunit.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <powermock.version>1.6.4</powermock.version>
    <junit.version>4.12</junit.version>
    <commons-io.version>2.6</commons-io.version>
    <sonar.plugin.version>3.6.0.1398</sonar.plugin.version>
    <maven.compiler.source>1.7</maven.compiler.source>
    <xml-resolver.version>1.2</xml-resolver.version>
    <sonar.maven.version>2.7.1</sonar.maven.version>
    <maven-shade.version>2.4.3</maven-shade.version>
    <commons-lang.version>3.8.1</commons-lang.version>
    <maven-jar.version>2.6</maven-jar.version>
    <dependency.check.version>3.0.1</dependency.check.version>
    <commons-lang-text.version>1.9</commons-lang-text.version>
    <maven.compiler.target>1.7</maven.compiler.target>
    <xercesImpl.version>2.8.0</xercesImpl.version>
    <saxon.version>9.9.1-8</saxon.version>
    <logback-classic.version>1.2.3</logback-classic.version>
  </properties>
</project>

